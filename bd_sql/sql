CREATE DATABASE `OnlineTest` CHARACTER SET utf8 COLLATE utf8_general_ci;

use `OnlineTest`;

CREATE TABLE `question` (
  `id` INT(5) NOT NULL AUTO_INCREMENT,
  `question` varchar(150) NOT NULL,
  PRIMARY KEY(`id`)
);

CREATE TABLE `answer` (
  `id` INT(5) NOT NULL AUTO_INCREMENT,
  `answer` text(200) NOT NULL,
  PRIMARY KEY(`id`)
);

CREATE TABLE `question_answer` (
   `question_id` INT(5),
   `answer_id` INT(5)
);

ALTER TABLE `question_answer`
ADD FOREIGN KEY (question_id)
REFERENCES `question` (id)
ON DELETE CASCADE
ON UPDATE CASCADE;

ALTER TABLE `question_answer`
ADD FOREIGN KEY (answer_id)
REFERENCES `answer` (id)
ON DELETE CASCADE
ON UPDATE CASCADE;

